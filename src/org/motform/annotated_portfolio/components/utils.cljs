(defn enumerate [xs]
  (map-indexed (fn [i x] [i x]) xs))

(defn toggle [s x]
  (let [f (if (contains? s x) disj conj)]
    (f s x)))

(defn grid-spacer []
  [:div.grid-null])

(defn separator []
  [:<>
   [:div.grid-separator]
   [grid-spacer]])

(def image-filetypes
  #{"image/apng" "image/bmp" "image/gif" "image/jpeg"
    "image/pjpeg" "image/png" "image/svg+xml" "image/tiff"
    "image/webp" "image/x-icon"})

(defn image-file? [file]
  (image-filetypes (.-type file)))

(defn CSS-URL [URL]
  (str "url(" URL ")"))

(defn pluralize [s pred]
  (if pred (str s "s") s))

(defn over-file-size? [max]
  (fn [file]
    (< max (.-size file))))

